<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.icvretail.web.report.WarehouseBalanceBrowse"
        focusComponent="warehouseBalancesTable"
        lookupComponent="warehouseBalancesTable"
        messagesPack="com.company.icvretail.web.report">
    <dsContext>
        <collectionDatasource id="warehouseBalancesDs"
                              class="com.company.icvretail.entity.registers.WarehouseBalance"
                              view="warehouseBalance-view">
            <query>
                <![CDATA[select e from icvretail$WarehouseBalance e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="warehouseBalancesTable"
            spacing="true">
        <filter id="filter"
                applyTo="warehouseBalancesTable"
                datasource="warehouseBalancesDs">
            <properties include=".*"/>
        </filter>
        <table id="warehouseBalancesTable"
               width="100%">
            <actions>
                <action id="refresh"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column id="recordType"/>
                <column id="warehouse"/>
                <column id="product"/>
                <column id="quantity"/>
                <column id="amount"/>
                <column id="period"/>
                <column id="note"/>
            </columns>
            <rows datasource="warehouseBalancesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="refreshBtn"
                        action="warehouseBalancesTable.refresh"/>
                <button id="excelBtn"
                        action="warehouseBalancesTable.excel"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
